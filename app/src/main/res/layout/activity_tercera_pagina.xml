<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TerceraPagina">

    <LinearLayout
        android:id="@+id/ly.horizontal.titulo3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5C5C5C"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ly.horizontal.imagen3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_titulo3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_titulo3"
            android:textAlignment="center"
            android:textColor="#00FDE8"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly.horizontal.imagen3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ly.horizontal.text3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly.horizontal.titulo3"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_fotoPortada3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/img.descripcion"
            app:srcCompat="@drawable/chatgpt"
            tools:srcCompat="@drawable/chatgpt" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly.horizontal.text3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ly.horizontal.escondido3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly.horizontal.imagen3">

        <TextView
            android:id="@+id/txt_principal3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="@string/txt.text3"
            android:textAlignment="center"
            android:textColor="#00FDE8"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly.horizontal.escondido3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ly.horizontal.btn3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly.horizontal.text3"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_escondido3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_escondido3"
            android:textAlignment="center"
            android:textColor="#00FDE8"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly.horizontal.btn3"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly.horizontal.escondido3">

        <Button
            android:id="@+id/btn_masinfo3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FDE8"
            android:insetLeft="0dp"
            android:insetTop="6dp"
            android:text="@string/txt.btn"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly.horizontal.btnPrePag3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="275dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ly.horizontal.footer3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly.horizontal.text3">

        <Button
            android:id="@+id/btn_prepag3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#00FDE8"
            android:text="@string/txt.btnPreviousPag"
            android:textColor="@color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly.horizontal.footer3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="680dp"
        android:background="#00FDE8"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly.horizontal.btn3">

        <ImageButton
            android:id="@+id/img_instagram3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FDE8"
            android:contentDescription="@string/boton.igdescripcion"
            app:srcCompat="@drawable/instagram" />

        <ImageButton
            android:id="@+id/img_gmail3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FDE8"
            android:contentDescription="@string/boton.gmdescripcion"
            app:srcCompat="@drawable/gmail" />

        <ImageButton
            android:id="@+id/img_facebook3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#00FDE8"
            android:contentDescription="@string/boton.fbdescripcion"
            app:srcCompat="@drawable/facebook" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>