<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SegundaPagina">

    <LinearLayout
        android:id="@+id/ly.horizontal.titulo2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ly.horizontal.imagen2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_titulo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_titulo2"
            android:textAlignment="center"
            android:textColor="#12E482"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly.horizontal.imagen2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ly.horizontal.text2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly.horizontal.titulo2"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_fotoPortada2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:contentDescription="@string/img.descripcion"
            app:srcCompat="@drawable/iacerebro"
            tools:srcCompat="@drawable/iacerebro" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly.horizontal.text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ly.horizontal.escondido2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly.horizontal.imagen2">

        <TextView
            android:id="@+id/txt_principal2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="@string/txt.text2"
            android:textAlignment="center"
            android:textColor="#12E482"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly.horizontal.escondido2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ly.horizontal.btn2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly.horizontal.text2"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_escondido2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txt_escondido2"
            android:textAlignment="center"
            android:textColor="#12E482"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly.horizontal.btn2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly.horizontal.escondido2">

        <Button
            android:id="@+id/btn_masinfo2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#12E482"
            android:insetLeft="0dp"
            android:insetTop="6dp"
            android:text="@string/txt.btn" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly.horizontal.btnPag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="275dp"
        android:layout_marginTop="250dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ly.horizontal.footer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly.horizontal.text2">

        <Button
            android:id="@+id/btn_nextpag2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#12E482"
            android:text="@string/txt.btnNextPag" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly.horizontal.btnPrePag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="275dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ly.horizontal.footer2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly.horizontal.text2">

        <Button
            android:id="@+id/btn_prepag2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#12E482"
            android:text="@string/txt.btnPreviousPag" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly.horizontal.footer2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="680dp"
        android:background="#12E482"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ly.horizontal.btn2">

        <ImageButton
            android:id="@+id/img_instagram2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#12E482"
            android:contentDescription="@string/boton.igdescripcion"
            app:srcCompat="@drawable/instagram" />

        <ImageButton
            android:id="@+id/img_gmail2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#12E482"
            android:contentDescription="@string/boton.gmdescripcion"
            app:srcCompat="@drawable/gmail" />

        <ImageButton
            android:id="@+id/img_facebook2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#12E482"
            android:contentDescription="@string/boton.fbdescripcion"
            app:srcCompat="@drawable/facebook" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>